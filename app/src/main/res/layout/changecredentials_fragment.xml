<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"  >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#125688" />

<TextView
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_below="@+id/view"
    android:paddingTop="15dip"
    android:textStyle="bold" 
    android:textSize="17sp"
    android:layout_marginLeft="5dp"
    android:textColor="#125688"
    android:text="@string/change_em_pass"/>
<View
   android:id="@+id/view_prof"
   android:layout_below="@+id/profile"
   android:layout_width="match_parent"
   android:background="#125688"
   android:layout_height="1dp"/>

<RelativeLayout
    android:id="@+id/rel_main1" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view_prof"
     android:layout_marginTop="20dp"
    android:orientation="horizontal" >
	    <TextView
	        android:id="@+id/title_email"
	        android:layout_width="150dp"
            android:layout_height="35dp"
	        android:paddingTop="6dip"
	        android:textStyle="bold" 
	        android:textSize="17sp"
	        android:layout_marginLeft="5dp"
	        android:textColor="#125688"
	        android:text="@string/Email"/>

	    <EditText
	        android:id="@+id/email"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/title_email"
	        android:paddingTop="6dip"
	        android:background="#FFFFFF"
	        android:textSize="17sp"
	        android:textColor="#000000"
	        android:textStyle="bold" />

    </RelativeLayout>
   
   <View
   android:id="@+id/view1"
   android:layout_below="@+id/rel_main1"
   android:layout_marginLeft="5dp"
   android:layout_marginRight="5dp"
   android:layout_marginTop="5dp"
   android:layout_width="match_parent"
   android:background="#E8E8E8"
   android:layout_height="1dp"/>
    
<RelativeLayout
    android:id="@+id/rel_main2" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view1"
    android:orientation="horizontal" >
	    <TextView
	        android:id="@+id/title_pass_c"
	        android:layout_width="150dp"
            android:layout_height="35dp"
	        android:paddingTop="6dip"
	        android:textStyle="bold" 
	        android:textSize="17sp"
	        android:textColor="#125688"
	        android:layout_marginLeft="5dp"
	        android:text="@string/Password_current"/>

	    <EditText
	        android:id="@+id/pass_c"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/title_pass_c"
	        android:paddingTop="6dip"
	        android:textSize="17sp"
	        android:textColor="#000000"
	        android:background="#FFFFFF"
	        android:inputType="textPassword"
	        android:textStyle="bold" />

    </RelativeLayout>
     
   <View
   android:id="@+id/view2"
   android:layout_below="@+id/rel_main2"
   android:layout_marginLeft="5dp"
   android:layout_marginRight="5dp"
   android:layout_marginTop="5dp"
   android:layout_width="match_parent"
   android:background="#E8E8E8"
   android:layout_height="1dp"/>
   
    <RelativeLayout
    android:id="@+id/rel_main3" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view2"
    android:orientation="horizontal" >
	    <TextView
	        android:id="@+id/title_pass_n"
	        android:layout_width="150dp"
            android:layout_height="35dp"
	        android:paddingTop="6dip"
	        android:textStyle="bold" 
	        android:textSize="17sp"
	        android:textColor="#125688"
	        android:layout_marginLeft="5dp"
	        android:text="@string/Password_new"/>

	    <EditText
	        android:id="@+id/pass_n"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/title_pass_n"
	        android:paddingTop="6dip"
	        android:textSize="17sp"
	        android:background="#FFFFFF"
	        android:textColor="#000000"
	        android:inputType="textPassword"
	        android:textStyle="bold" />

    </RelativeLayout>
       <View
   android:id="@+id/view3"
   android:layout_below="@+id/rel_main3"
   android:layout_marginLeft="5dp"
   android:layout_marginRight="5dp"
   android:layout_marginTop="5dp"
   android:layout_width="match_parent"
   android:background="#E8E8E8"
   android:layout_height="1dp"/>
       
     <RelativeLayout
    android:id="@+id/rel_main4" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view3"
    android:orientation="horizontal" >
	    <TextView
	        android:id="@+id/title_pass_r"
	        android:layout_width="150dp"
            android:layout_height="35dp"
	        android:paddingTop="6dip"
	        android:textStyle="bold" 
	        android:textSize="17sp"
	        android:textColor="#125688"
	        android:layout_marginLeft="5dp"
	        android:text="@string/Password_retype"/>

	    <EditText
	        android:id="@+id/pass_r"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/title_pass_r"
	        android:paddingTop="6dip"
	        android:textSize="17sp"
	        android:textColor="#000000"
	        android:inputType="textPassword"
	        android:background="#FFFFFF"
	        android:textStyle="bold" />

    </RelativeLayout>
    
   <View
   android:id="@+id/view4"
   android:layout_below="@+id/rel_main4"
   android:layout_marginLeft="5dp"
   android:layout_marginRight="5dp"
   android:layout_marginTop="5dp"
   android:layout_width="match_parent"
   android:background="#E8E8E8"
   android:layout_height="1dp"/>

   
   <Button
     android:id="@+id/btn_save"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/view4"
     android:layout_marginTop="16dp"
     android:background="#125688"
     android:paddingBottom="10dp"
     android:paddingLeft="40dp"
     android:paddingRight="40dp"
     android:paddingTop="10dp"
     android:text="@string/save"
     android:layout_centerHorizontal="true"
     android:layout_centerVertical="true"
     android:textColor="#FFFFFF" />

   <TextView
       android:id="@+id/resulttext"
       android:layout_width="match_parent"
       android:layout_height="52dp"
       android:layout_alignBottom="@+id/view"
       android:layout_alignParentLeft="true"
       android:background="#1A080808"
       android:drawableEnd="@drawable/pencil"
       android:drawableRight="@drawable/pencil"
       android:textSize="30sp"
       android:textStyle="bold" />
    
   
</RelativeLayout>
</ScrollView>