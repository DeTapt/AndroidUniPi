<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rel_main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/photo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:paddingRight="10dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/id"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/rel_main2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/photo"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rel_main3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="9dp"
                    android:text="name"
                    android:textColor="#000000"
                    android:paddingRight="6dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/name"
                    android:background="#FFFFFF"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="surname" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >
                <RatingBar

                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:layout_marginBottom="-25dp"
                    android:layout_marginRight="-40dp"
                    android:theme="@style/RatingBar"
                    android:backgroundTint="@color/black"
                    android:progressTint="@color/gold"
                    android:secondaryProgressTint="@color/gold"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:gravity="center"
                    android:layout_below="@+id/view_grade"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/presence_online"
                android:drawableRight="@drawable/presence_online"
                android:paddingTop="35dip"/>

            <TextView
                android:id="@+id/offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableEnd="@drawable/presence_invisible"
                android:drawableRight="@drawable/presence_invisible"
                android:paddingTop="35dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_main"
        android:paddingTop="6dip"
        android:background="#FFFFFF"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="email"
        android:visibility="invisible"/>


</LinearLayout>
