<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#125688" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:paddingTop="20dip"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:textColor="#125688"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="@string/change_km"/>
        <View
            android:id="@+id/view_prof"
            android:layout_below="@+id/profile"
            android:layout_width="match_parent"
            android:background="#125688"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rel_main2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_prof"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/new_d"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:paddingTop="10dip"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="3dp"
                android:textColor="#125688"
                android:text="@string/new_km"/>

            <EditText
                android:id="@+id/new_d_insert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/new_d"
                android:paddingTop="10dip"
                android:background="#FFFFFF"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </RelativeLayout>




        <View
            android:id="@+id/view4"
            android:layout_below="@+id/rel_main2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:background="#E8E8E8"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/defaultd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/view4"
            android:layout_marginLeft="5dp"
            android:paddingTop="15dip"
            android:text="@string/default_km"
            android:textColor="#125688"
            android:textSize="13sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/defaultd"
            android:layout_marginTop="16dp"
            android:background="#125688"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="@string/save"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignBottom="@+id/view"
            android:layout_alignParentLeft="true"
            android:background="#1A080808"
            android:drawableEnd="@drawable/pencil"
            android:drawableRight="@drawable/pencil"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>