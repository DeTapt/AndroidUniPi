<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"  >

		<RelativeLayout
			android:id="@+id/rel_main1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#FFFFFF" >

			<RelativeLayout
				android:id="@+id/rel_main"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp">


				<EditText
					android:id="@+id/et_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/name"
					/>

				<EditText
					android:id="@+id/et_surname"
					android:layout_below="@+id/et_name"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/surname"
					/>
				<EditText
					android:id="@+id/et_email"
					android:layout_below="@+id/et_surname"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="textEmailAddress"
					android:hint="@string/email"
					/>
				<EditText
					android:id="@+id/et_username"
					android:layout_below="@+id/et_email"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/username"
					/>
				<EditText
					android:id="@+id/et_password"
					android:layout_below="@+id/et_username"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="textPassword"
					android:hint="@string/password"
					/>
				<EditText
					android:id="@+id/et_age"
					android:layout_below="@+id/et_password"
					android:layout_marginTop="5dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="number"
					android:hint="@string/age"
					/>
				<RadioGroup
					android:id="@+id/et_gender"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/et_age"
					android:orientation="horizontal"
					android:paddingTop="5dp"

					>
					<RadioButton
						android:id="@+id/radioM"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:layout_weight="1"
						android:textColor="#000"
						android:text="@string/male"
						/>
					<RadioButton
						android:id="@+id/radioF"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_gravity="right"
						android:checked="false"
						android:layout_weight="1"
						android:textColor="#000"
						android:text="@string/female"
						/>
				</RadioGroup>
				<TextView
					android:id="@+id/options"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/et_gender"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="10dp"
					android:text="Charging Options"
					android:textColor="#a6a6a6" />

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_below="@+id/options">

					<CheckBox android:id="@+id/charger"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:text="Charger"/>

					<CheckBox android:id="@+id/powerbag"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:text="Powerbag"/>

					<CheckBox android:id="@+id/usb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:text="@string/c_charger"/>

					<CheckBox android:id="@+id/usb_otg"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:text="@string/otg_charger"/>
				</LinearLayout>
			</RelativeLayout>

			<View
				android:id="@+id/view"
				android:layout_below="@+id/rel_main"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_width="match_parent"
				android:background="#a6a6a6"
				android:layout_height="1dp"/>


			<Button
				android:id="@+id/btn_register"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/view"
				android:layout_marginTop="16dp"
				android:layout_centerHorizontal="true"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:background="#bb0000"
				android:singleLine="true"
				android:paddingLeft="30dp"
				android:paddingRight="30dp"
				android:text="@string/register"
				android:textColor="#FFFFFF" />
			<View
				android:id="@+id/view_b"
				android:layout_below="@+id/btn_register"
				android:layout_width="match_parent"
				android:layout_marginTop="10dp"
				android:background="#125688"
				android:layout_height="0dp"/>

		</RelativeLayout>

	</ScrollView>


